---
---
{
    "monthCounts" : [
        {% assign mthYr = '' %}
        {% assign mthYrCount = '0' %}
        {% for post in site.posts %} 
            {% assign currMthYr = post.date | date: "%m/%Y"%}
            {% if mthYr == '' %}
                {% assign mthYr = currMthYr %}
            {% endif %}
            {% if currMthYr != mthYr %}
        { "{{ mthYr }}" : "{{ mthYrCount }}" },
                {% assign mthYr = currMthYr %}
                {% assign mthYrCount = '1' %}
            {% else %}
                {% capture mthYrCount %}{{ mthYrCount | plus:1 }}{% endcapture %}
            {% endif %}
        {% endfor %}
        {% if site.posts.size != '0' %}
        { "{{ currMthYr }}" : "{{ mthYrCount }}" }
        {% endif %}
    ]
}